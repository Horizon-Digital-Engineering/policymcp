# Server Configuration
PORT=3000
HOST=0.0.0.0
CORS_ORIGIN=*

# MCP Endpoint Authentication
# Options: none, api-key, jwt
# Default: none (easy demos, no auth required)
MCP_AUTH_MODE=none

# If MCP_AUTH_MODE=api-key, set this to your secret API key
#MCP_AUTH_API_KEY=your-secret-key-here

# If MCP_AUTH_MODE=jwt, configure JWT validation
#MCP_AUTH_JWT_SECRET=your-jwt-secret
#MCP_AUTH_JWT_AUDIENCE=https://your-audience.com
#MCP_AUTH_JWT_ISSUER=https://your-issuer.com

# Web/API Endpoint Authentication
# Options: none, api-key, jwt
# Default: none (easy demos, no auth required)
WEB_AUTH_MODE=none

# If WEB_AUTH_MODE=api-key, set this to your secret API key
#WEB_AUTH_API_KEY=your-secret-key-here

# If WEB_AUTH_MODE=jwt, configure JWT validation
#WEB_AUTH_JWT_SECRET=your-jwt-secret
#WEB_AUTH_JWT_AUDIENCE=https://your-audience.com
#WEB_AUTH_JWT_ISSUER=https://your-issuer.com
