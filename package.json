{
  "name": "policymcp",
  "version": "0.1.0",
  "description": "MCP server for scanning policy documents (PDF, Word, Markdown) and exposing them to AI assistants",
  "main": "dist/index.js",
  "type": "module",
  "bin": {
    "policymcp": "./dist/index.js"
  },
  "scripts": {
    "build": "tsc && cp -r src/public dist/",
    "start": "node dist/index.js",
    "dev": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "keywords": [
    "mcp",
    "pdf",
    "policy",
    "ai",
    "claude"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Horizon-Digital-Engineering/policymcp.git"
  },
  "homepage": "https://github.com/Horizon-Digital-Engineering/policymcp#readme",
  "bugs": {
    "url": "https://github.com/Horizon-Digital-Engineering/policymcp/issues"
  },
  "license": "BUSL-1.1",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.18.1",
    "cors": "^2.8.5",
    "express": "^5.2.1",
    "gray-matter": "^4.0.3",
    "jszip": "^3.10.1",
    "jsonwebtoken": "^9.0.2",
    "mammoth": "^1.8.0",
    "marked": "^15.0.6",
    "multer": "^2.0.2",
    "pdf-parse": "^2.4.5",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.6",
    "@types/jsonwebtoken": "^9.0.5",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.19.30",
    "@types/pdf-parse": "^1.1.4",
    "@types/supertest": "^6.0.2",
    "supertest": "^7.2.2",
    "@vitest/coverage-v8": "^4.0.18",
    "@vitest/ui": "^4.0.17",
    "eslint": "^9.17.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.54.0",
    "vitest": "^4.0.17"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
